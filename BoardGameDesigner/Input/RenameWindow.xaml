<Window x:Class="BoardGameDesigner.Input.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter a Name" Height="100" Width="300" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" ToolTip="Enter a name for this component" WindowStyle="None" AllowsTransparency="True" BorderThickness="1">
    <Grid RenderTransformOrigin="0.5,0.5">

        <Label x:Name="lblEntry" Content="Please enter a name. Names must be unique." Height="30" VerticalAlignment="Top" Margin="10,10,-10,0" />
        <TextBox x:Name="txtName" AcceptsReturn="False" AcceptsTab="False" AutoWordSelection="False" MaxLength="255" VerticalAlignment="Top" Margin="10,40,10,0" />
        <Button x:Name="btnSave" Content="Accept" IsDefault="True" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="114,67,93,0" Width="91" Click="btnSave_Click" />
        <Button x:Name="btnCancel" Content="Cancel" IsCancel="True" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="210,67,9,0" Width="79" Click="btnCancel_Click" />
    </Grid>
</Window>
